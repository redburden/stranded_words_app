  { word: "ASTEROID", weight: 10 },
  { word: "EXTRATERRESTRIAL", weight: 9 },
  { word: "TELEPORT", weight: 8 },
  { word: "STARSHIP", weight: 7 },
  { word: "INTERGALACTIC", weight: 6 },
  { word: "ORBIT", weight: 5 },
